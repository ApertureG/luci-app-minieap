#!/bin/sh /etc/rc.common
START=90

start()
{
    kill $(cat /var/log/minieap-ping.pid 2>/dev/null) 2>/dev/null
    local enable
    local username
    local password
    local nic
    local pinghost
    config_get_bool enable $1 enable
    config_get username $1 username
    config_get password $1 password
    config_get nic $1 nic
    config_get pinghost $1 pinghost
    if [ $enable ] && [ $username ] && [ $password ] && [ $ifname ]; then
        if [ $pinghost ]; then
            /usr/sbin/minieap-ping &
        fi
        /bin/ash -c "minieap -b3"
    else
        /bin/ash -c "minieap -k"
    fi
}

stop()
{
    kill $(cat /var/log/minieap-ping.pid 2>/dev/null) 2>/dev/null
    minieap -k
}

restart()
{
    kill $(cat /var/log/minieap-ping.pid 2>/dev/null) 2>/dev/null
    local enable
    local username
    local password
    local nic
    local pinghost
    config_get_bool enable $1 enable
    config_get username $1 username
    config_get password $1 password
    config_get nic $1 nic
    config_get pinghost $1 pinghost
    if [ $enable ] && [ $username ] && [ $password ] && [ $ifname ]; then
        if [ $pinghost ]; then
            /usr/sbin/minieap-ping &
        fi
        /bin/ash -c "minieap -k 1"
    else
        /bin/ash -c "minieap -k"
    fi
}
